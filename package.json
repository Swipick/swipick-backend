{
  "name": "swipick-backend",
  "version": "1.0.0",
  "description": "Backend service for Swipick - a speculative football game",
  "private": true,
  "packageManager": "npm@10.0.0",
  "workspaces": [
    "apps/backend/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run start:dev",
    "start:dev": "npm run start:dev --workspace=apps/backend/bff",
    "start:dev:bff": "turbo run start:dev --filter=bff",
    "start:dev:match-service": "turbo run start:dev --filter=match-service",
    "start:dev:user-service": "turbo run start:dev --filter=user-service",
    "start:dev:game-engine": "turbo run start:dev --filter=game-engine",
    "start:dev:notification-service": "turbo run start:dev --filter=notification-service",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:cov": "turbo run test:cov",
    "test:e2e": "turbo run test:e2e",
    "test:smoke": "turbo run test:smoke",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "docker:build": "turbo run docker:build",
    "docker:run": "turbo run docker:run",
    "health-check": "turbo run health-check"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "turbo": "latest",
    "typescript": "^5.1.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
