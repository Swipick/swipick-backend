{
  "name": "@swipick/common",
  "version": "1.0.0",
  "description": "Shared DTOs, interfaces, and utilities for Swipick backend services",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "format": "prettier --write \"src/**/*.ts\"",
